<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.baoitmo.labs.itmoshopping">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"
        tools:ignore="UnusedAttribute">
        <activity
            android:name="com.baoitmo.labs.itmoshopping.activity.WelcomeActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.baoitmo.labs.itmoshopping.activity.MainActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name="com.baoitmo.labs.itmoshopping.activity.BaseActivity" />
        <activity
            android:name="com.baoitmo.labs.itmoshopping.activity.ProductActivity"
            android:configChanges="orientation|screenSize|keyboardHidden" />
        <activity
            android:name="com.baoitmo.labs.itmoshopping.activity.LoginRegisterActivity"
            android:configChanges="orientation|screenSize|keyboardHidden" />
        <activity android:name="com.baoitmo.labs.itmoshopping.activity.CartActivity" />
        <activity android:name="com.baoitmo.labs.itmoshopping.activity.CheckoutActivity" />
        <activity android:name="com.baoitmo.labs.itmoshopping.activity.ProductViewActivity"></activity>
    </application>

</manifest>